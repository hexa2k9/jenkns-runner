FROM ghcr.io/esphome/esphome:stable


RUN set -eux \
    && apt-get update \
    && apt-get install -y \
        jq \
        git \
        bash \
        curl \
        nmap \
        unzip \
        openjdk-17-jre-headless \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

ENTRYPOINT [ "/usr/bin/bash" ]
